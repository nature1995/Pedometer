<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="cn.bluemobi.dylan.step.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/location_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">
        <!--android:background="@mipmap/step_bg"-->

        <TextView
            android:id="@+id/show_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:gravity="center_horizontal"
            android:text="Location: Stevens Institute of Technology"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@mipmap/home_statistical"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="View history"
            android:textColor="#333333" />

        <cn.bluemobi.dylan.step.view.StepArcView
            android:id="@+id/cc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@mipmap/home_question_mark"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Set plan"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_isSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="The device supports step counting"
            android:textColor="#333333" />

        <Button
            android:id="@+id/vibrateBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_isSupport"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Test vibrate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vibrateBotton"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-351dp"
            android:layout_marginRight="40dp"
            android:layout_toStartOf="@+id/vibrateBotton"
            android:layout_toLeftOf="@+id/vibrateBotton"
            android:text="Location"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/weatherBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="165dp"

            android:text="Weather"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/aboutBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherBotton"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="65dp"
            android:text="About US"
            android:textAllCaps="false" />

    </RelativeLayout>


</RelativeLayout>
